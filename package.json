{
  "name": "fabric-format",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build -w @jacobknightley/fabric-format && npm run build -w fabric-format-chromium",
    "build:core": "npm run build -w @jacobknightley/fabric-format",
    "build:chromium": "npm run build -w fabric-format-chromium",
